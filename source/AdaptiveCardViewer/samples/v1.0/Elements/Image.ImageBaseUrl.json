{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.0",
	"backgroundImage": "https://messagecardplayground.azurewebsites.net/assets/background.png",
	"body": [
		{
			"type": "Image",
			"url": "https://github.com/microsoft/AdaptiveCards/blob/main/assets/Adaptive1.0.png?raw=true",
			"altText": "Adaptive cards 1.0 logo"
		}
	],
	"actions": [
		{
			"type": "Action.ShowCard",
			"title": "Open Card",
			"iconUrl": "https://github.com/microsoft/AdaptiveCards/blob/main/assets/Adaptive1.0.png?raw=true",
			"card": {
				"type": "AdaptiveCard",
				"body": [
					{
						"type": "Input.Text",
						"id": "comment",
						"isMultiline": true,
						"placeholder": "Enter your comment"
					}
				],
				"actions": [
					{
						"type": "Action.Submit",
						"iconUrl": "https://github.com/microsoft/AdaptiveCards/blob/main/assets/Adaptive1.0.png?raw=true",
						"title": "OK"
					}
				]
			}
		}
	]
}
